<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<%= form_tag(search_results_path, method: :get) do %>
  <%= text_field_tag :name, params[:name] %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quote</th>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td class="col-sm-auto"><%= character.name %></td>
        <td class="col-xl-auto"><%= character.quote %></td>
        <td class="col-sm"><%= character.species %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts %>

<br>

<%= link_to 'New Character', new_character_path %>
<%= link_to 'About Page', about_path %>
